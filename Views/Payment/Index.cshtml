@model List<semissssloan.Entities.Payment>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item" ><a style="text-decoration: none;color:white;" class="link user-select-none" href="../../loan/viewloan/@ViewData["ClientId"]">Loan</a></li>
        <li class="breadcrumb-item active">Loan Schedule</li>
    </ol>
</nav>

<table class="table table-hover table-bordered bg-white">
    <thead>
        <tr class="text-dark text-center">
            <th>Id</th>
            <th>Collectables</th>
            <th>Date</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var schedDate in Model)
        {
            <tr class="text-dark text-center">
                <td>@schedDate.PaymentId</td>
                <td>@schedDate.Collectable</td>
                <td>@schedDate.Date.ToString("MMM dd yyyy")</td>
                <td>@(schedDate.Collectable != 0 ? "Unpaid" : "Paid")</td>
                <td>
                    @if (schedDate.Collectable != 0)
                    {
                        <a class="btn btn-success" data-bs-toggle="modal" data-bs-target="#payLoanModal"
                            onclick="getPayment(@schedDate.LoanId, @schedDate.Collectable, @schedDate.PaymentId)">Pay</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@await Html.PartialAsync("_Pay.cshtml")

@section Scripts {
    <script src="~/js/payment.js"></script>
}